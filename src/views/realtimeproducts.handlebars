<h1>websockets</h1>

<div class="add-product">
    <h2>Add product</h2>
    <form id="addProductForm" action="/realtimeproducts" method="post">
        <div>
            <label for="title">Title</label>
            <input type="text" id="productTitle" name="title" placeholder="Title">
        </div>
        <div>
            <label for="price">Price</label>
            <input type="number" id="productPrice" name="price" placeholder="Price">
        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" id="productDescription" name="description" placeholder="Description">
        </div>
        <div>
            <label for="code">Code</label>
            <input type="text" id="productCode" name="code" placeholder="Code">
        </div>
        <div>
            <label for="stock">Stock</label>
            <input type="text" id="productStock" name="stock" placeholder="Stock">
        </div>
        <button type="submit">Add</button>
    </form>
</div>

<div class="product-catalogue">
    <h1>Product catalogue</h1>
    <table id="productTable">
        <thead>
            <tr>
                <th>id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Code</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody id="productTableBody">
            <!-- Datos que van a venir por sockets -->
        </tbody>
    </table>
</div>

<style>
    /* Add some basic styles to the form */
    form {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-bottom: 20px;
    }

    /* Style the input fields */
    input {
        padding: 5px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    /* Style the submit button */
    button[type="submit"] {
        padding: 5px 10px;
        border-radius: 5px;
        border: none;
        background-color: #007bff;
        color: #fff;
        cursor: pointer;
    }

    /* Style the table */
    table {
        border-collapse: collapse;
        width: 100%;
    }

    /* Style the table header */
    th {
        background-color: #007bff;
        color: #fff;
        text-align: left;
        padding: 10px;
    }

    /* Style the table rows */
    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    /* Style the table data cells */
    td {
        padding: 10px;
    }

    /* Add some spacing between the sections */
    .add-product {
        margin-bottom: 20px;
    }
</style>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtimeproducts.js"></script>